@{
    ViewData["Title"] = "Login";
}
<form method="post">
    <label>Логин:</label><br />
    <input type="text" name="login" /><br /><br /> @*для однострочного текста*@
    <label>Пароль:</label><br />
    <input type="password" name="password" /><br /><br /> @*Для ввода парольной информации*@
    <label>Возраст:</label><br />
    <input type="number" name="age" /><br /><br /> @*Для ввода чисел (int, short, byte, long, float, double)*@
    <label>Логин:</label><br />
    <textarea name="comment"></textarea><br> @*для многострочного текста*@

    <label>Женат/Замужем:</label><br />
    <input type="checkbox" name="isMarried" value="true" /><br><br> @*Для передачи логических значений true или false *@

    <input name="color" type="radio" value="red" />
    <span>красный</span> <br />
    <input name="color" type="radio" value="blue" />
    <span>синий</span> <br />
    <input checked="checked" name="color" type="radio" value="green" />
    <span>зеленый</span><br><br>

    <p>
        <label for="phone">Выберите модель:</label>
        <select name="phone">
            <option value="iPhone 6S">Apple</option>
            <option value="Lumia 950 XL">Microsoft</option>
            <option value="HTC 10">HTC</option>
            <option value="Galaxy EDGE S7">Samsung</option>
        </select>
    </p><br><br>

    <input type="submit" value="Отправить" />
</form>